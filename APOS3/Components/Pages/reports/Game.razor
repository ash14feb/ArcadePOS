@page "/reports/games"
@using Microsoft.AspNetCore.Components
@using APOS3.DataAccess.Repos
@using APOS3.DataAccess
@using APOS3.Models
@inject NavigationManager NavigationManager
@inject IBillingRepository BillingRepository

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-indigo-50/30 p-4">
    <div class="max-w-full mx-auto">
        <!-- Header Section -->
        <div class="mb-6">
            <div class="flex flex-col sm:flex-row justify-between gap-4 items-start">
                <div class="flex items-center gap-3">
                    <div class="p-2 bg-white rounded-xl shadow-sm border border-gray-100">
                        <span class="material-symbols-outlined text-2xl text-indigo-600">sports_esports</span>
                    </div>
                    <div>
                        <h1 class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-gray-900 to-indigo-800 bg-clip-text text-transparent">
                            Game Analytics
                        </h1>
                        <p class="text-gray-600 text-sm flex items-center gap-1">
                            <span class="material-symbols-outlined text-base">analytics</span>
                            Game performance and revenue insights
                        </p>
                    </div>
                </div>

                <div class="flex items-center gap-2">
                    <button @onclick="ExportToExcel"
                            class="flex items-center gap-2 rounded-xl px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-600 text-white hover:from-green-600 hover:to-emerald-700 transition-all duration-300 shadow-lg hover:shadow-xl text-sm">
                        <span class="material-symbols-outlined text-sm">download</span>
                        <span class="font-semibold">Export</span>
                    </button>
                    <button @onclick="GoBack"
                            class="flex items-center gap-2 rounded-xl px-4 py-2 bg-white text-gray-700 border border-gray-200 hover:border-gray-300 hover:bg-gray-50 transition-all duration-300 shadow-sm hover:shadow-md text-sm">
                        <span class="material-symbols-outlined text-sm">arrow_back</span>
                        <span class="font-semibold">Back</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Date Range Selector Card -->
        <div class="bg-white rounded-2xl border border-gray-200/80 p-4 sm:p-6 mb-6 shadow-lg">
            <div class="flex items-center gap-2 mb-4">
                <span class="material-symbols-outlined text-indigo-500 text-xl">calendar_month</span>
                <h3 class="text-xl font-bold text-gray-900">Date Range</h3>
            </div>

            <div class="flex flex-col gap-4">
                <!-- Quick Date Buttons -->
                <div class="flex flex-wrap gap-2">
                    @foreach (var range in new[] { "today", "yesterday", "thisMonth", "lastMonth", "custom" })
                    {
                        var rangeConfig = range switch
                        {
                            "today" => ("Today", "today"),
                            "yesterday" => ("Yesterday", "schedule"),
                            "thisMonth" => ("This Month", "calendar_today"),
                            "lastMonth" => ("Last Month", "event"),
                            "custom" => ("Custom", "date_range"),
                            _ => ("", "")
                        };
                        
                        <button @onclick='() => SetDateRange(range)'
                                class="flex items-center gap-1 px-3 py-2 rounded-lg text-xs font-semibold transition-all duration-300 @(selectedRange == range ? "bg-gradient-to-r from-indigo-500 to-purple-600 text-white shadow-lg" : "bg-gray-100 text-gray-700 hover:bg-gray-200 hover:shadow-md")">
                            <span class="material-symbols-outlined text-sm">@rangeConfig.Item2</span>
                            <span class="hidden sm:inline">@rangeConfig.Item1</span>
                            <span class="sm:hidden">@rangeConfig.Item1.Split(' ')[0]</span>
                        </button>
                    }
                </div>

                <!-- Custom Date Inputs -->
                @if (selectedRange == "custom")
                {
                    <div class="flex flex-col sm:flex-row items-start sm:items-center gap-3 bg-indigo-50/50 rounded-xl p-3 border border-indigo-200/50">
                        <div class="flex flex-col sm:flex-row gap-3 w-full">
                            <div class="flex-1">
                                <label class="block text-xs font-semibold text-gray-700 mb-1">From Date</label>
                                <input type="date" @bind="startDate" @bind:format="yyyy-MM-dd"
                                       class="form-input rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 shadow-sm px-3 py-2 w-full text-sm" />
                            </div>
                            <div class="flex-1">
                                <label class="block text-xs font-semibold text-gray-700 mb-1">To Date</label>
                                <input type="date" @bind="endDate" @bind:format="yyyy-MM-dd"
                                       class="form-input rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 shadow-sm px-3 py-2 w-full text-sm" />
                            </div>
                        </div>
                        <button @onclick="LoadGameData"
                                class="px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white rounded-lg hover:from-indigo-600 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl font-semibold text-sm w-full sm:w-auto">
                            Apply
                        </button>
                    </div>
                }
            </div>

            <!-- Selected Date Range Display -->
            <div class="mt-4 p-3 bg-gradient-to-r from-indigo-500/10 to-purple-500/10 rounded-xl border border-indigo-200/50">
                <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2">
                    <div class="flex-1">
                        <p class="text-xs font-semibold text-indigo-800">
                            🎮 <span class="font-bold">@GetDateRangeDisplay()</span>
                        </p>
                        <div class="flex gap-3 mt-1">
                            <div class="flex items-center gap-1">
                                <span class="material-symbols-outlined text-indigo-500 text-sm">sports_esports</span>
                                <span class="text-xs text-indigo-700">
                                    <span class="font-bold">@gameReports.Count()</span> games
                                </span>
                            </div>
                            <div class="flex items-center gap-1">
                                <span class="material-symbols-outlined text-green-500 text-sm">receipt</span>
                                <span class="text-xs text-green-700">
                                    <span class="font-bold">@gameReports.Sum(x => x.TotalSessions)</span> sessions
                                </span>
                            </div>
                            <div class="flex items-center gap-1">
                                <span class="material-symbols-outlined text-blue-500 text-sm">payments</span>
                                <span class="text-xs text-blue-700">
                                    <span class="font-bold">Rs @($"{gameReports.Sum(x => x.TotalRevenue):N0}")</span> revenue
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="text-lg font-bold text-gray-900">
                            Rs @($"{gameReports.Sum(x => x.TotalRevenue):N0}")
                        </div>
                        <div class="text-xs text-gray-600">Total Revenue</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Game Summary Cards -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 mb-6">
            <!-- Total Games Card -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-200/60">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-semibold text-gray-600">Active Games</p>
                        <p class="text-xl font-bold text-gray-900 mt-1">@gameReports.Count()</p>
                    </div>
                    <div class="p-2 bg-indigo-100 rounded-lg">
                        <span class="material-symbols-outlined text-indigo-600 text-lg">sports_esports</span>
                    </div>
                </div>
            </div>

            <!-- Total Sessions Card -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-200/60">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-semibold text-gray-600">Total Sessions</p>
                        <p class="text-xl font-bold text-green-600 mt-1">@gameReports.Sum(x => x.TotalSessions)</p>
                    </div>
                    <div class="p-2 bg-green-100 rounded-lg">
                        <span class="material-symbols-outlined text-green-600 text-lg">play_arrow</span>
                    </div>
                </div>
            </div>

            <!-- Total Revenue Card -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-200/60">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-semibold text-gray-600">Total Revenue</p>
                        <p class="text-xl font-bold text-blue-600 mt-1">Rs @($"{gameReports.Sum(x => x.TotalRevenue):N0}")</p>
                    </div>
                    <div class="p-2 bg-blue-100 rounded-lg">
                        <span class="material-symbols-outlined text-blue-600 text-lg">payments</span>
                    </div>
                </div>
            </div>

            <!-- Avg. Revenue Card -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-200/60">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-semibold text-gray-600">Avg. Per Game</p>
                        <p class="text-xl font-bold text-orange-600 mt-1">
                            Rs @($"{(gameReports.Any() ? gameReports.Average(x => x.TotalRevenue) : 0):N0}")
                        </p>
                    </div>
                    <div class="p-2 bg-orange-100 rounded-lg">
                        <span class="material-symbols-outlined text-orange-600 text-lg">trending_up</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Games List Card -->
        <div class="bg-white rounded-2xl border border-gray-200/80 shadow-xl overflow-hidden">
            <!-- Card Header -->
            <div class="px-4 sm:px-6 py-4 border-b border-gray-200/60 bg-gradient-to-r from-gray-50 to-indigo-50/30">
                <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2">
                    <div class="flex items-center gap-2">
                        <span class="material-symbols-outlined text-xl text-indigo-600">leaderboard</span>
                        <h3 class="text-xl font-bold text-gray-900">Game Performance</h3>
                    </div>
                    <div class="flex items-center gap-1 text-xs text-gray-500">
                        <span class="material-symbols-outlined text-sm">sort</span>
                        Sorted by revenue
                    </div>
                </div>
            </div>

            @if (isLoading)
            {
                <div class="flex flex-col justify-center items-center py-12">
                    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600 mb-3"></div>
                    <p class="text-gray-600 text-sm font-medium">Loading game data...</p>
                </div>
            }
            else if (!gameReports.Any())
            {
                <div class="text-center py-12">
                    <div class="p-4 bg-gray-50 rounded-2xl inline-block mb-3">
                        <span class="material-symbols-outlined text-4xl text-gray-400">sports_esports</span>
                    </div>
                    <h4 class="text-lg font-semibold text-gray-600 mb-1">No Game Data Found</h4>
                    <p class="text-gray-500 text-sm max-w-md mx-auto">
                        No game revenue data found for the selected period.
                    </p>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full min-w-full">
                        <thead class="bg-gradient-to-r from-gray-50 to-gray-100/50">
                            <tr>
                                <th class="px-3 sm:px-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    Game
                                </th>
                                <th class="px-3 sm:px-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hidden md:table-cell">
                                    Device Type
                                </th>
                                <th class="px-3 sm:px-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    Sessions
                                </th>
                                <th class="px-3 sm:px-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    Revenue
                                </th>
                                <th class="px-3 sm:px-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hidden lg:table-cell">
                                    Avg. Session
                                </th>
                                <th class="px-3 sm:px-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    Performance
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200/60">
                            @foreach (var game in gameReports)
                            {
                                var totalRevenueAllGames = gameReports.Sum(x => x.TotalRevenue);
                    var isTopPerformer = totalRevenueAllGames > 0 && game.TotalRevenue >= totalRevenueAllGames * 0.8m;
var isGoodPerformer = totalRevenueAllGames > 0 && game.TotalRevenue >= totalRevenueAllGames * 0.5m;
var isLowPerformer = totalRevenueAllGames > 0 && game.TotalRevenue <= totalRevenueAllGames * 0.2m;
                                
                                var rowClass = isTopPerformer ? "bg-gradient-to-r from-amber-50 to-yellow-50/50 hover:from-amber-100 hover:to-yellow-100/50" :
                                            isGoodPerformer ? "bg-gradient-to-r from-green-50 to-emerald-50/50 hover:from-green-100 hover:to-emerald-100/50" :
                                            isLowPerformer ? "bg-gradient-to-r from-red-50 to-pink-50/50 hover:from-red-100 hover:to-pink-100/50" :
                                            "bg-white hover:bg-gray-50/80";
                                
                                var performanceColor = isTopPerformer ? "text-amber-600" :
                                                    isGoodPerformer ? "text-green-600" :
                                                    isLowPerformer ? "text-red-600" : "text-gray-600";
                                
                                <tr class="@rowClass transition-all duration-300">
                                    <!-- Game Details -->
                                    <td class="px-3 sm:px-4 py-3">
                                        <div class="flex items-center gap-2">
                                            <div class="p-2 rounded-lg bg-white shadow-sm border border-gray-200/60">
                                                <span class="material-symbols-outlined text-indigo-500 text-sm">
                                                    sports_esports
                                                </span>
                                            </div>
                                            <div class="min-w-0 flex-1">
                                                <div class="text-sm font-semibold text-gray-900 truncate">
                                                    @game.GameName
                                                </div>
                                                <div class="text-xs text-gray-500 truncate md:hidden">
                                                    @game.DeviceType
                                                </div>
                                                <div class="text-xs text-gray-400">
                                                    Rs @game.GameAmount per play
                                                </div>
                                            </div>
                                        </div>
                                    </td>

                                    <!-- Device Type - Hidden on mobile -->
                                    <td class="px-3 sm:px-4 py-3 hidden md:table-cell">
                                        <div class="flex items-center gap-2 text-sm text-gray-700">
                                            <span class="material-symbols-outlined text-blue-500 text-sm">devices</span>
                                            @game.DeviceType
                                        </div>
                                    </td>

                                    <!-- Sessions -->
                                    <td class="px-3 sm:px-4 py-3">
                                        <div class="flex items-center gap-2">
                                            <div class="p-1 bg-blue-100 rounded-lg">
                                                <span class="material-symbols-outlined text-blue-600 text-sm">play_arrow</span>
                                            </div>
                                            <div>
                                                <div class="text-sm font-bold text-gray-900">@game.TotalSessions</div>
                                                <div class="text-xs text-gray-500">plays</div>
                                            </div>
                                        </div>
                                    </td>

                                    <!-- Revenue -->
                                    <td class="px-3 sm:px-4 py-3">
                                        <div class="flex items-center gap-2">
                                            <div class="p-1 bg-green-100 rounded-lg">
                                                <span class="material-symbols-outlined text-green-600 text-sm">currency_rupee</span>
                                            </div>
                                            <div>
                                                <div class="text-sm font-bold text-gray-900">Rs @($"{game.TotalRevenue:N0}")</div>
                                                <div class="text-xs text-gray-500">revenue</div>
                                            </div>
                                        </div>
                                    </td>

                                    <!-- Average Session Revenue - Hidden on mobile -->
                                    <td class="px-3 sm:px-4 py-3 hidden lg:table-cell">
                                        <div class="text-sm font-semibold text-gray-900">
                                            Rs @($"{(game.TotalSessions > 0 ? game.TotalRevenue / game.TotalSessions : 0):N0}")
                                        </div>
                                        <div class="text-xs text-gray-500">per session</div>
                                    </td>

                                    <!-- Performance -->
                                    <td class="px-3 sm:px-4 py-3">
                                        <div class="flex flex-col gap-1">
                                            @if (isTopPerformer)
                                            {
                                                <span class="inline-flex items-center px-2 py-1 text-xs font-bold bg-amber-100 text-amber-800 rounded-full">
                                                    <span class="material-symbols-outlined text-xs mr-1">trending_up</span>
                                                    Top Performer
                                                </span>
                                            }
                                            else if (isGoodPerformer)
                                            {
                                                <span class="inline-flex items-center px-2 py-1 text-xs font-bold bg-green-100 text-green-800 rounded-full">
                                                    <span class="material-symbols-outlined text-xs mr-1">check_circle</span>
                                                    Good
                                                </span>
                                            }
                                            else if (isLowPerformer)
                                            {
                                                <span class="inline-flex items-center px-2 py-1 text-xs font-bold bg-red-100 text-red-800 rounded-full">
                                                    <span class="material-symbols-outlined text-xs mr-1">warning</span>
                                                    Needs Attention
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center px-2 py-1 text-xs font-bold bg-gray-100 text-gray-800 rounded-full">
                                                    <span class="material-symbols-outlined text-xs mr-1">remove</span>
                                                    Average
                                                </span>
                                            }
                                            
                                            <!-- Revenue Percentage -->
                                            @if (totalRevenueAllGames > 0)
                                            {
                                                <div class="text-xs @performanceColor font-semibold">
                                                    @($"{((game.TotalRevenue / totalRevenueAllGames) * 100):F1}")% of total
                                                </div>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        
                        <!-- Footer with Totals -->
                        <tfoot class="bg-gradient-to-r from-gray-50 to-blue-50/30 border-t-2 border-gray-200/60">
                            <tr>
                                <td class="px-3 sm:px-4 py-3 text-sm font-bold text-gray-900">
                                    <div class="flex items-center gap-2">
                                        <span class="material-symbols-outlined text-indigo-600 text-sm">summarize</span>
                                        Total (@gameReports.Count() games)
                                    </div>
                                </td>
                                <td class="px-3 sm:px-4 py-3 text-sm text-gray-500 hidden md:table-cell">
                                    -
                                </td>
                                <td class="px-3 sm:px-4 py-3 text-lg font-bold text-gray-900">
                                    @gameReports.Sum(x => x.TotalSessions)
                                </td>
                                <td class="px-3 sm:px-4 py-3 text-lg font-bold text-blue-600">
                                    Rs @($"{gameReports.Sum(x => x.TotalRevenue):N0}")
                                </td>
                                <td class="px-3 sm:px-4 py-3 text-sm text-gray-500 hidden lg:table-cell">
                                    -
                                </td>
                                <td class="px-3 sm:px-4 py-3 text-sm text-gray-500">
                                    Overall Performance
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- Legend -->
                <div class="px-4 sm:px-6 py-3 bg-gradient-to-r from-gray-50 to-gray-100/50 border-t border-gray-200/60">
                    <div class="flex flex-wrap gap-3 items-center text-xs">
                        <div class="font-semibold text-gray-700 flex items-center gap-1">
                            <span class="material-symbols-outlined text-sm">legend_toggle</span>
                            Performance:
                        </div>
                        <div class="flex items-center gap-1">
                            <div class="w-3 h-3 bg-amber-100 border border-amber-300 rounded"></div>
                            <span class="text-amber-700">Top Performer</span>
                        </div>
                        <div class="flex items-center gap-1">
                            <div class="w-3 h-3 bg-green-100 border border-green-300 rounded"></div>
                            <span class="text-green-700">Good</span>
                        </div>
                        <div class="flex items-center gap-1">
                            <div class="w-3 h-3 bg-red-100 border border-red-300 rounded"></div>
                            <span class="text-red-700">Needs Attention</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private IEnumerable<Models.GameReport> gameReports = new List<Models.GameReport>();
    private bool isLoading = false;
    private string selectedRange = "today";
    private DateTime startDate = DateTime.Today;
    private DateTime endDate = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        await LoadGameData();
    }

    private async Task LoadGameData()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Get actual game revenue data from repository
            gameReports = await BillingRepository.GetGameRevenueReportAsync(startDate, endDate);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading game data: {ex.Message}");
            gameReports = new List<GameReport>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SetDateRange(string range)
    {
        selectedRange = range;

        switch (range)
        {
            case "today":
                startDate = DateTime.Today;
                endDate = DateTime.Today;
                break;
            case "yesterday":
                startDate = DateTime.Today.AddDays(-1);
                endDate = DateTime.Today.AddDays(-1);
                break;
            case "thisMonth":
                startDate = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
                endDate = DateTime.Today;
                break;
            case "lastMonth":
                var lastMonth = DateTime.Today.AddMonths(-1);
                startDate = new DateTime(lastMonth.Year, lastMonth.Month, 1);
                endDate = new DateTime(lastMonth.Year, lastMonth.Month, DateTime.DaysInMonth(lastMonth.Year, lastMonth.Month));
                break;
            case "custom":
                // Keep current dates for custom selection
                break;
        }

        if (range != "custom")
        {
            _ = LoadGameData();
        }
    }

    private string GetDateRangeDisplay()
    {
        return selectedRange switch
        {
            "today" => "Today",
            "yesterday" => "Yesterday",
            "thisMonth" => "This Month",
            "lastMonth" => "Last Month",
            "custom" => $"{startDate:MMM dd, yyyy} to {endDate:MMM dd, yyyy}",
            _ => "Unknown Range"
        };
    }

    private async Task ExportToExcel()
    {
        Console.WriteLine("Exporting game data to Excel...");
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/reports");
    }
}

