@page "/reports/sales"
@using Microsoft.AspNetCore.Components
@using APOS3.DataAccess.Repos
@using APOS3.DataAccess
@using APOS3.Models
@inject NavigationManager NavigationManager
@inject IPaymentRepository PaymentRepository

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50/30 p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header Section -->
        <div class="mb-8">
            <div class="flex flex-wrap justify-between gap-4 items-start mb-6">
                <div class="flex items-center gap-4">
                    <div class="p-3 bg-white rounded-2xl shadow-sm border border-gray-100">
                        <span class="material-symbols-outlined text-3xl text-blue-600">analytics</span>
                    </div>
                    <div>
                        <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 to-blue-800 bg-clip-text text-transparent">
                            Sales Analytics
                        </h1>
                        <p class="text-gray-600 mt-2 flex items-center gap-2">
                            <span class="material-symbols-outlined text-lg">insights</span>
                            Daily sales performance with advanced insights
                        </p>
                    </div>
                </div>

                <div class="flex items-center gap-3">
                    <button @onclick="ExportToExcel"
                            class="flex items-center gap-3 rounded-2xl px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white hover:from-green-600 hover:to-emerald-700 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105">
                        <span class="material-symbols-outlined">download</span>
                        <span class="text-sm font-semibold">Export Excel</span>
                    </button>
                    <button @onclick="GoBack"
                            class="flex items-center gap-3 rounded-2xl px-6 py-3 bg-white text-gray-700 border border-gray-200 hover:border-gray-300 hover:bg-gray-50 transition-all duration-300 shadow-sm hover:shadow-md">
                        <span class="material-symbols-outlined">arrow_back</span>
                        <span class="text-sm font-semibold">Back</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Date Range Selector Card -->
        <div class="bg-white rounded-3xl border border-gray-200/80 p-8 mb-8 shadow-lg backdrop-blur-sm bg-white/95">
            <div class="flex items-center gap-3 mb-6">
                <span class="material-symbols-outlined text-blue-500 text-2xl">calendar_month</span>
                <h3 class="text-2xl font-bold text-gray-900">Date Range</h3>
            </div>

            <div class="flex flex-wrap gap-6 items-center">
                <!-- Quick Date Buttons -->
                <div class="flex flex-wrap gap-3">
                    @foreach (var range in new[] { "today", "yesterday", "thisMonth", "lastMonth", "custom" })
                    {
                        var rangeConfig = range switch
                        {
                            "today" => ("Today", "today"),
                            "yesterday" => ("Yesterday", "schedule"),
                            "thisMonth" => ("This Month", "calendar_today"),
                            "lastMonth" => ("Last Month", "event"),
                            "custom" => ("Custom", "date_range"),
                            _ => ("", "")
                        };

                        <button @onclick='() => SetDateRange(range)'
                                class="flex items-center gap-2 px-5 py-3 rounded-xl text-sm font-semibold transition-all duration-300 @(selectedRange == range ? "bg-gradient-to-r from-blue-500 to-purple-600 text-white shadow-lg" : "bg-gray-100 text-gray-700 hover:bg-gray-200 hover:shadow-md")">
                            <span class="material-symbols-outlined text-lg">@rangeConfig.Item2</span>
                            @rangeConfig.Item1
                        </button>
                    }
                </div>

                <!-- Custom Date Inputs -->
                @if (selectedRange == "custom")
                {
                    <div class="flex items-center gap-4 bg-blue-50/50 rounded-2xl p-4 border border-blue-200/50">
                        <div class="flex items-center gap-4">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">From Date</label>
                                <input type="date" @bind="startDate" @bind:format="yyyy-MM-dd"
                                       class="form-input rounded-xl border-gray-300 focus:border-blue-500 focus:ring-blue-500 shadow-sm px-4 py-3" />
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">To Date</label>
                                <input type="date" @bind="endDate" @bind:format="yyyy-MM-dd"
                                       class="form-input rounded-xl border-gray-300 focus:border-blue-500 focus:ring-blue-500 shadow-sm px-4 py-3" />
                            </div>
                        </div>
                        <button @onclick="LoadSalesData"
                                class="mt-6 px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-xl hover:from-blue-600 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl font-semibold">
                            Apply Filter
                        </button>
                    </div>
                }
            </div>

            <!-- Selected Date Range Display -->
            <div class="mt-6 p-5 bg-gradient-to-r from-blue-500/10 to-purple-500/10 rounded-2xl border border-blue-200/50">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-semibold text-blue-800">
                            📊 Showing data from: <span class="font-bold text-lg">@GetDateRangeDisplay()</span>
                        </p>
                        <div class="flex gap-6 mt-2">
                            <div class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-blue-500 text-lg">event</span>
                                <span class="text-sm text-blue-700">
                                    <span class="font-bold">@salesSummary.Count()</span> days
                                </span>
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-green-500 text-lg">receipt</span>
                                <span class="text-sm text-green-700">
                                    <span class="font-bold">@salesSummary.Sum(x => x.TransactionCount)</span> transactions
                                </span>
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-purple-500 text-lg">payments</span>
                                <span class="text-sm text-purple-700">
                                    <span class="font-bold">Rs @($"{salesSummary.Sum(x => x.TotalRechargeAmount):N0}")</span> total
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold text-gray-900">
                            Rs @($"{salesSummary.Sum(x => x.TotalRechargeAmount):N0}")
                        </div>
                        <div class="text-sm text-gray-600">Total Revenue</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sales Summary Card -->
        <div class="bg-white rounded-3xl border border-gray-200/80 shadow-xl overflow-hidden">
            <!-- Card Header -->
            <div class="px-8 py-6 border-b border-gray-200/60 bg-gradient-to-r from-gray-50 to-blue-50/30">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-2xl text-blue-600">bar_chart</span>
                        <h3 class="text-2xl font-bold text-gray-900">Daily Performance</h3>
                    </div>
                    <div class="flex items-center gap-2 text-sm text-gray-500">
                        <span class="material-symbols-outlined text-lg">info</span>
                        Real-time sales analytics
                    </div>
                </div>
            </div>

            @if (isLoading)
            {
                <div class="flex flex-col justify-center items-center py-16">
                    <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mb-4"></div>
                    <p class="text-gray-600 text-lg font-medium">Loading sales insights...</p>
                    <p class="text-gray-400 text-sm mt-2">Crunching the numbers for you</p>
                </div>
            }
            else if (!salesSummary.Any())
            {
                <div class="text-center py-16">
                    <div class="p-6 bg-gray-50 rounded-3xl inline-block mb-4">
                        <span class="material-symbols-outlined text-6xl text-gray-400">query_stats</span>
                    </div>
                    <h4 class="text-xl font-semibold text-gray-600 mb-2">No Data Available</h4>
                    <p class="text-gray-500 max-w-md mx-auto">
                        No sales data found for the selected period. Try adjusting your date range or check back later.
                    </p>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gradient-to-r from-gray-50 to-gray-100/50">
                            <tr>
                                <th class="px-8 py-5 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                                    <div class="flex items-center gap-2">
                                        <span class="material-symbols-outlined">calendar_today</span>
                                        Date & Day
                                    </div>
                                </th>
                                <th class="px-8 py-5 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                                    <div class="flex items-center gap-2">
                                        <span class="material-symbols-outlined">receipt</span>
                                        Transactions
                                    </div>
                                </th>
                                <th class="px-8 py-5 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                                    <div class="flex items-center gap-2">
                                        <span class="material-symbols-outlined">payments</span>
                                        Sales Amount
                                    </div>
                                </th>
                                <th class="px-8 py-5 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                                    <div class="flex items-center gap-2">
                                        <span class="material-symbols-outlined">trending_up</span>
                                        Weekly Trend
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200/60">
                            @foreach (var summary in salesSummary)
                            {
                                var isWeekend = summary.SaleDate.DayOfWeek == DayOfWeek.Saturday || summary.SaleDate.DayOfWeek == DayOfWeek.Sunday;
                                var isToday = summary.SaleDate.Date == DateTime.Today;
                                var isYesterday = summary.SaleDate.Date == DateTime.Today.AddDays(-1);

                                var rowClass = isToday ? "bg-gradient-to-r from-green-50 to-emerald-50/50 hover:from-green-100 hover:to-emerald-100/50" :
                                isYesterday ? "bg-gradient-to-r from-blue-50 to-sky-50/50 hover:from-blue-100 hover:to-sky-100/50" :
                                isWeekend ? "bg-gradient-to-r from-orange-50 to-amber-50/50 hover:from-orange-100 hover:to-amber-100/50" :
                                "bg-white hover:bg-gray-50/80";

                                var dayClass = isWeekend ? "text-orange-600 font-bold" : "text-gray-600";
                                var dateClass = isToday ? "text-green-700 font-bold" :
                                isYesterday ? "text-blue-700 font-bold" : "text-gray-900";

                                <tr class="@rowClass transition-all duration-300 hover:scale-[1.01] hover:shadow-lg">
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="flex items-center gap-4">
                                            <div class="p-3 rounded-2xl bg-white shadow-sm border border-gray-200/60">
                                                <span class="material-symbols-outlined text-blue-500">
                                                    @(isWeekend ? "weekend" : "today")
                                                </span>
                                            </div>
                                            <div>
                                                <div class="text-lg font-semibold @dateClass">
                                                    @summary.SaleDate.ToString("MMM dd, yyyy")
                                                </div>
                                                <div class="text-sm @dayClass flex items-center gap-2 mt-1">
                                                    @summary.SaleDate.ToString("dddd")
                                                    @if (isToday)
                                                    {
                                                        <span class="inline-flex items-center px-3 py-1 text-xs font-bold bg-green-100 text-green-800 rounded-full border border-green-200">
                                                            <span class="material-symbols-outlined text-xs mr-1">flash_on</span>
                                                            Live
                                                        </span>
                                                    }
                                                    else if (isYesterday)
                                                    {
                                                        <span class="inline-flex items-center px-3 py-1 text-xs font-bold bg-blue-100 text-blue-800 rounded-full border border-blue-200">
                                                            <span class="material-symbols-outlined text-xs mr-1">schedule</span>
                                                            Recent
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="flex items-center gap-3">
                                            <div class="p-2 bg-blue-100 rounded-xl">
                                                <span class="material-symbols-outlined text-blue-600 text-lg">shopping_cart</span>
                                            </div>
                                            <div>
                                                <div class="text-2xl font-bold text-gray-900">@summary.TransactionCount</div>
                                                <div class="text-xs text-gray-500 font-medium">ORDERS</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="flex items-center gap-3">
                                            <div class="p-2 bg-green-100 rounded-xl">
                                                <span class="material-symbols-outlined text-green-600 text-lg">currency_rupee</span>
                                            </div>
                                            <div>
                                                <div class="text-2xl font-bold text-gray-900">Rs @($"{summary.TotalRechargeAmount:N0}")</div>
                                                <div class="text-xs text-gray-500 font-medium">REVENUE</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        @if (summary.WeekOverWeekChange.HasValue)
                                        {
                                            var change = summary.WeekOverWeekChange.Value;
                                            var isPositive = change > 0;
                                            var isNegative = change < 0;
                                            var isNeutral = change == 0;

                                            var trendClass = isPositive ? "bg-green-100 text-green-800 border-green-200" :
                                            isNegative ? "bg-red-100 text-red-800 border-red-200" :
                                            "bg-gray-100 text-gray-800 border-gray-200";

                                            <div class="inline-flex items-center gap-3 px-4 py-3 rounded-2xl border-2 @trendClass transition-all duration-300 hover:scale-105">
                                                @if (isPositive)
                                                {
                                                    <span class="material-symbols-outlined text-green-600 text-xl">trending_up</span>
                                                    <span class="text-lg font-bold">+@($"{change:F1}")%</span>
                                                }
                                                else if (isNegative)
                                                {
                                                    <span class="material-symbols-outlined text-red-600 text-xl">trending_down</span>
                                                    <span class="text-lg font-bold">@($"{change:F1}")%</span>
                                                }
                                                else
                                                {
                                                    <span class="material-symbols-outlined text-gray-500 text-xl">remove</span>
                                                    <span class="text-lg font-bold text-gray-600">No change</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="inline-flex items-center gap-2 px-4 py-3 rounded-2xl bg-gray-100 text-gray-600 border border-gray-200">
                                                <span class="material-symbols-outlined text-gray-500">data_alert</span>
                                                <span class="text-sm font-medium">No comparison data</span>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <!-- Footer with Totals -->
                        <tfoot class="bg-gradient-to-r from-gray-50 to-blue-50/30 border-t-2 border-gray-200/60">
                            <tr>
                                <td class="px-8 py-6 text-lg font-bold text-gray-900">
                                    <div class="flex items-center gap-3">
                                        <span class="material-symbols-outlined text-blue-600">summarize</span>
                                        Summary (@salesSummary.Count() days)
                                    </div>
                                </td>
                                <td class="px-8 py-6 text-2xl font-bold text-gray-900">
                                    @salesSummary.Sum(x => x.TransactionCount)
                                </td>
                                <td class="px-8 py-6 text-2xl font-bold text-blue-600">
                                    Rs @($"{salesSummary.Sum(x => x.TotalRechargeAmount):N0}")
                                </td>
                                <td class="px-8 py-6">
                                    <div class="text-sm text-gray-500 font-medium">
                                        Performance Overview
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- Enhanced Legend -->
                <div class="px-8 py-4 bg-gradient-to-r from-gray-50 to-gray-100/50 border-t border-gray-200/60">
                    <div class="flex flex-wrap gap-6 items-center text-sm">
                        <div class="font-semibold text-gray-700 flex items-center gap-2">
                            <span class="material-symbols-outlined text-lg">legend_toggle</span>
                            Quick Guide:
                        </div>
                        <div class="flex items-center gap-2">
                            <div class="w-4 h-4 bg-green-100 border-2 border-green-300 rounded-lg"></div>
                            <span class="text-green-700 font-medium">Today</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <div class="w-4 h-4 bg-blue-100 border-2 border-blue-300 rounded-lg"></div>
                            <span class="text-blue-700 font-medium">Yesterday</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <div class="w-4 h-4 bg-orange-100 border-2 border-orange-300 rounded-lg"></div>
                            <span class="text-orange-700 font-medium">Weekend</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-symbols-outlined text-green-500 text-lg">trending_up</span>
                            <span class="text-green-600 font-medium">Growing</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-symbols-outlined text-red-500 text-lg">trending_down</span>
                            <span class="text-red-600 font-medium">Declining</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    // Your existing code block remains exactly the same
    private IEnumerable<SalesSummary> salesSummary = new List<SalesSummary>();
    private bool isLoading = false;
    private string selectedRange = "today";
    private DateTime startDate = DateTime.Today;
    private DateTime endDate = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        await LoadSalesData();
    }

    private async Task LoadSalesData()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var summaryData = await PaymentRepository.GetSalesSummaryByDateRangeAsync(startDate, endDate);

            // Calculate week-over-week changes
            salesSummary = await CalculateWeekOverWeekChanges(summaryData.ToList());
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading sales data: {ex.Message}");
            salesSummary = new List<SalesSummary>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task<List<SalesSummary>> CalculateWeekOverWeekChanges(List<SalesSummary> currentData)
    {
        var result = new List<SalesSummary>();

        foreach (var summary in currentData)
        {
            // Get the same day from last week
            var lastWeekSameDay = summary.SaleDate.AddDays(-7);

            // Get sales data for last week's same day
            var lastWeekData = await PaymentRepository.GetSalesSummaryByDateRangeAsync(
                lastWeekSameDay, lastWeekSameDay);

            var lastWeekSummary = lastWeekData.FirstOrDefault();

            if (lastWeekSummary != null && lastWeekSummary.TotalRechargeAmount > 0)
            {
                // Calculate percentage change
                var change = ((summary.TotalRechargeAmount - lastWeekSummary.TotalRechargeAmount) /
                             lastWeekSummary.TotalRechargeAmount) * 100;
                summary.WeekOverWeekChange = (double)change;
            }
            else
            {
                summary.WeekOverWeekChange = null;
            }

            result.Add(summary);
        }

        return result;
    }

    private void SetDateRange(string range)
    {
        selectedRange = range;

        switch (range)
        {
            case "today":
                startDate = DateTime.Today;
                endDate = DateTime.Today;
                break;
            case "yesterday":
                startDate = DateTime.Today.AddDays(-1);
                endDate = DateTime.Today.AddDays(-1);
                break;
            case "thisMonth":
                startDate = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
                endDate = DateTime.Today;
                break;
            case "lastMonth":
                var lastMonth = DateTime.Today.AddMonths(-1);
                startDate = new DateTime(lastMonth.Year, lastMonth.Month, 1);
                endDate = new DateTime(lastMonth.Year, lastMonth.Month, DateTime.DaysInMonth(lastMonth.Year, lastMonth.Month));
                break;
            case "custom":
                // Keep current dates for custom selection
                break;
        }

        if (range != "custom")
        {
            _ = LoadSalesData();
        }
    }

    private string GetDateRangeDisplay()
    {
        return selectedRange switch
        {
            "today" => "Today",
            "yesterday" => "Yesterday",
            "thisMonth" => "This Month",
            "lastMonth" => "Last Month",
            "custom" => $"{startDate:MMM dd, yyyy} to {endDate:MMM dd, yyyy}",
            _ => "Unknown Range"
        };
    }

    private async Task ExportToExcel()
    {
        // Implement Excel export functionality
        Console.WriteLine("Exporting to Excel...");
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/reports");
    }
