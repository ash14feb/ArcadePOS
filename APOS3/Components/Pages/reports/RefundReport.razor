@page "/reports/refund"
@using Microsoft.AspNetCore.Components
@using APOS3.DataAccess.Repos
@using APOS3.DataAccess
@using APOS3.Models
@inject NavigationManager NavigationManager
@inject IBillingRepository BillingRepository

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-red-50/30 p-4">
    <div class="max-w-full mx-auto">
        <!-- Header Section -->
        <div class="mb-6">
            <div class="flex flex-col sm:flex-row justify-between gap-4 items-start">
                <div class="flex items-center gap-3">
                    <div class="p-2 bg-white rounded-xl shadow-sm border border-gray-100">
                        <span class="material-symbols-outlined text-2xl text-red-600">currency_exchange</span>
                    </div>
                    <div>
                        <h1 class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-gray-900 to-red-800 bg-clip-text text-transparent">
                            Refund Analytics
                        </h1>
                        <p class="text-gray-600 text-sm flex items-center gap-1">
                            <span class="material-symbols-outlined text-base">receipt_long</span>
                            Refund transactions and customer insights
                        </p>
                    </div>
                </div>

                <div class="flex items-center gap-2">
                    <button @onclick="ExportToExcel"
                            class="flex items-center gap-2 rounded-xl px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-600 text-white hover:from-green-600 hover:to-emerald-700 transition-all duration-300 shadow-lg hover:shadow-xl text-sm">
                        <span class="material-symbols-outlined text-sm">download</span>
                        <span class="font-semibold">Export</span>
                    </button>
                    <button @onclick="GoBack"
                            class="flex items-center gap-2 rounded-xl px-4 py-2 bg-white text-gray-700 border border-gray-200 hover:border-gray-300 hover:bg-gray-50 transition-all duration-300 shadow-sm hover:shadow-md text-sm">
                        <span class="material-symbols-outlined text-sm">arrow_back</span>
                        <span class="font-semibold">Back</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Date Range Selector Card -->
        <div class="bg-white rounded-2xl border border-gray-200/80 p-4 sm:p-6 mb-6 shadow-lg">
            <div class="flex items-center gap-2 mb-4">
                <span class="material-symbols-outlined text-red-500 text-xl">calendar_month</span>
                <h3 class="text-xl font-bold text-gray-900">Date Range</h3>
            </div>

            <div class="flex flex-col gap-4">
                <!-- Quick Date Buttons -->
                <div class="flex flex-wrap gap-2">
                    @foreach (var range in new[] { "today", "yesterday", "thisMonth", "lastMonth", "custom" })
                    {
                        var rangeConfig = range switch
                        {
                            "today" => ("Today", "today"),
                            "yesterday" => ("Yesterday", "schedule"),
                            "thisMonth" => ("This Month", "calendar_today"),
                            "lastMonth" => ("Last Month", "event"),
                            "custom" => ("Custom", "date_range"),
                            _ => ("", "")
                        };

                        <button @onclick='() => SetDateRange(range)'
                                class="flex items-center gap-1 px-3 py-2 rounded-lg text-xs font-semibold transition-all duration-300 @(selectedRange == range ? "bg-gradient-to-r from-red-500 to-pink-600 text-white shadow-lg" : "bg-gray-100 text-gray-700 hover:bg-gray-200 hover:shadow-md")">
                            <span class="material-symbols-outlined text-sm">@rangeConfig.Item2</span>
                            <span class="hidden sm:inline">@rangeConfig.Item1</span>
                            <span class="sm:hidden">@rangeConfig.Item1.Split(' ')[0]</span>
                        </button>
                    }
                </div>

                <!-- Custom Date Inputs -->
                @if (selectedRange == "custom")
                {
                    <div class="flex flex-col sm:flex-row items-start sm:items-center gap-3 bg-red-50/50 rounded-xl p-3 border border-red-200/50">
                        <div class="flex flex-col sm:flex-row gap-3 w-full">
                            <div class="flex-1">
                                <label class="block text-xs font-semibold text-gray-700 mb-1">From Date</label>
                                <input type="date" @bind="startDate" @bind:format="yyyy-MM-dd"
                                       class="form-input rounded-lg border-gray-300 focus:border-red-500 focus:ring-red-500 shadow-sm px-3 py-2 w-full text-sm" />
                            </div>
                            <div class="flex-1">
                                <label class="block text-xs font-semibold text-gray-700 mb-1">To Date</label>
                                <input type="date" @bind="endDate" @bind:format="yyyy-MM-dd"
                                       class="form-input rounded-lg border-gray-300 focus:border-red-500 focus:ring-red-500 shadow-sm px-3 py-2 w-full text-sm" />
                            </div>
                        </div>
                        <button @onclick="LoadRefundData"
                                class="px-4 py-2 bg-gradient-to-r from-red-500 to-pink-600 text-white rounded-lg hover:from-red-600 hover:to-pink-700 transition-all duration-300 shadow-lg hover:shadow-xl font-semibold text-sm w-full sm:w-auto">
                            Apply
                        </button>
                    </div>
                }
            </div>

            <!-- Selected Date Range Display -->
            <div class="mt-4 p-3 bg-gradient-to-r from-red-500/10 to-pink-500/10 rounded-xl border border-red-200/50">
                <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2">
                    <div class="flex-1">
                        <p class="text-xs font-semibold text-red-800">
                            💰 <span class="font-bold">@GetDateRangeDisplay()</span>
                        </p>
                        <div class="flex gap-3 mt-1">
                            <div class="flex items-center gap-1">
                                <span class="material-symbols-outlined text-red-500 text-sm">receipt</span>
                                <span class="text-xs text-red-700">
                                    <span class="font-bold">@refunds.Count()</span> refunds
                                </span>
                            </div>
                            <div class="flex items-center gap-1">
                                <span class="material-symbols-outlined text-blue-500 text-sm">people</span>
                                <span class="text-xs text-blue-700">
                                    <span class="font-bold">@refunds.Select(x => x.customer_id).Distinct().Count()</span> customers
                                </span>
                            </div>
                            <div class="flex items-center gap-1">
                                <span class="material-symbols-outlined text-green-500 text-sm">payments</span>
                                <span class="text-xs text-green-700">
                                    <span class="font-bold">Rs @($"{refunds.Sum(x => x.amount):N0}")</span> refunded
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="text-lg font-bold text-red-600">
                            Rs @($"{refunds.Sum(x => x.amount):N0}")
                        </div>
                        <div class="text-xs text-gray-600">Total Refunded</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Refund Summary Cards -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 mb-6">
            <!-- Total Refunds Card -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-200/60">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-semibold text-gray-600">Total Refunds</p>
                        <p class="text-xl font-bold text-gray-900 mt-1">@refunds.Count()</p>
                    </div>
                    <div class="p-2 bg-red-100 rounded-lg">
                        <span class="material-symbols-outlined text-red-600 text-lg">receipt</span>
                    </div>
                </div>
            </div>

            <!-- Total Amount Card -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-200/60">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-semibold text-gray-600">Total Amount</p>
                        <p class="text-xl font-bold text-red-600 mt-1">Rs @($"{refunds.Sum(x => x.amount):N0}")</p>
                    </div>
                    <div class="p-2 bg-red-100 rounded-lg">
                        <span class="material-symbols-outlined text-red-600 text-lg">currency_rupee</span>
                    </div>
                </div>
            </div>

            <!-- Affected Customers Card -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-200/60">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-semibold text-gray-600">Customers</p>
                        <p class="text-xl font-bold text-blue-600 mt-1">@refunds.Select(x => x.customer_id).Distinct().Count()</p>
                    </div>
                    <div class="p-2 bg-blue-100 rounded-lg">
                        <span class="material-symbols-outlined text-blue-600 text-lg">group</span>
                    </div>
                </div>
            </div>

            <!-- Avg. Refund Card -->
            <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-200/60">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-semibold text-gray-600">Avg. Refund</p>
                        <p class="text-xl font-bold text-orange-600 mt-1">
                            Rs @($"{(refunds.Any() ? refunds.Average(x => x.amount) : 0):N0}")
                        </p>
                    </div>
                    <div class="p-2 bg-orange-100 rounded-lg">
                        <span class="material-symbols-outlined text-orange-600 text-lg">trending_up</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Refunds List Card -->
        <div class="bg-white rounded-2xl border border-gray-200/80 shadow-xl overflow-hidden">
            <!-- Card Header -->
            <div class="px-4 sm:px-6 py-4 border-b border-gray-200/60 bg-gradient-to-r from-gray-50 to-red-50/30">
                <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2">
                    <div class="flex items-center gap-2">
                        <span class="material-symbols-outlined text-xl text-red-600">list_alt</span>
                        <h3 class="text-xl font-bold text-gray-900">Refund Transactions</h3>
                    </div>
                    <div class="flex items-center gap-1 text-xs text-gray-500">
                        <span class="material-symbols-outlined text-sm">filter_list</span>
                        @refunds.Count() refunds found
                    </div>
                </div>
            </div>

            @if (isLoading)
            {
                <div class="flex flex-col justify-center items-center py-12">
                    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-red-600 mb-3"></div>
                    <p class="text-gray-600 text-sm font-medium">Loading refund data...</p>
                </div>
            }
            else if (!refunds.Any())
            {
                <div class="text-center py-12">
                    <div class="p-4 bg-gray-50 rounded-2xl inline-block mb-3">
                        <span class="material-symbols-outlined text-4xl text-gray-400">check_circle</span>
                    </div>
                    <h4 class="text-lg font-semibold text-gray-600 mb-1">No Refunds Found</h4>
                    <p class="text-gray-500 text-sm max-w-md mx-auto">
                        No refund transactions found for the selected period.
                    </p>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full min-w-full">
                        <thead class="bg-gradient-to-r from-gray-50 to-gray-100/50">
                            <tr>
                                <th class="px-3 sm:px-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    Customer & RFID
                                </th>
                                <th class="px-3 sm:px-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hidden md:table-cell">
                                    Contact Info
                                </th>
                                <th class="px-3 sm:px-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    Refund Details
                                </th>
                                <th class="px-3 sm:px-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hidden lg:table-cell">
                                    Balance Impact
                                </th>
                                <th class="px-3 sm:px-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                    Refund Info
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200/60">
                            @foreach (var refund in refunds)
                            {
                                var isLargeRefund = refund.amount > 1000;
                                var isRecent = refund.refund_at.HasValue && refund.refund_at.Value >= DateTime.Today.AddDays(-1);

                                var rowClass = isLargeRefund ? "bg-gradient-to-r from-red-50 to-pink-50/50 hover:from-red-100 hover:to-pink-100/50" :
                                isRecent ? "bg-gradient-to-r from-orange-50 to-amber-50/50 hover:from-orange-100 hover:to-amber-100/50" :
                                "bg-white hover:bg-gray-50/80";

                                <tr class="@rowClass transition-all duration-300">
                                    <!-- Customer & RFID -->
                                    <td class="px-3 sm:px-4 py-3">
                                        <div class="flex items-center gap-2">
                                            <div class="p-2 rounded-lg bg-white shadow-sm border border-gray-200/60">
                                                <span class="material-symbols-outlined text-red-500 text-sm">
                                                    person
                                                </span>
                                            </div>
                                            <div class="min-w-0 flex-1">
                                                <div class="text-sm font-semibold text-gray-900 truncate">
                                                    @refund.name
                                                </div>
                                                <div class="text-xs text-gray-500 flex items-center gap-1 mt-1">
                                                    <span class="material-symbols-outlined text-xs">fingerprint</span>
                                                    ID: @refund.customer_id
                                                </div>
                                                <div class="text-xs text-gray-400 font-mono bg-gray-100 px-2 py-1 rounded inline-block mt-1">
                                                    @refund.rfid
                                                </div>
                                            </div>
                                        </div>
                                    </td>

                                    <!-- Contact Info - Hidden on mobile -->
                                    <td class="px-3 sm:px-4 py-3 hidden md:table-cell">
                                        <div class="space-y-1">
                                            @if (!string.IsNullOrEmpty(refund.phone))
                                            {
                                                <div class="flex items-center gap-1 text-xs text-gray-700">
                                                    <span class="material-symbols-outlined text-blue-500 text-sm">phone</span>
                                                    @refund.phone
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(refund.email))
                                            {
                                                <div class="flex items-center gap-1 text-xs text-gray-700">
                                                    <span class="material-symbols-outlined text-green-500 text-sm">mail</span>
                                                    <span class="truncate">@refund.email</span>
                                                </div>
                                            }
                                        </div>
                                    </td>

                                    <!-- Refund Details -->
                                    <td class="px-3 sm:px-4 py-3">
                                        <div class="space-y-2">
                                            <div class="flex items-center gap-2">
                                                <span class="material-symbols-outlined text-red-500 text-sm">currency_rupee</span>
                                                <div>
                                                    <div class="text-lg font-bold text-red-600">Rs @($"{refund.amount:N0}")</div>
                                                    <div class="text-xs text-gray-500">Refund Amount</div>
                                                </div>
                                            </div>
                                            @if (refund.token_earn.HasValue && refund.token_earn.Value > 0)
                                            {
                                                <div class="flex items-center gap-1 text-xs text-amber-600">
                                                    <span class="material-symbols-outlined text-xs">celebration</span>
                                                    <span>@refund.token_earn.Value tokens refunded</span>
                                                </div>
                                            }
                                        </div>
                                    </td>

                                    <!-- Balance Impact - Hidden on mobile -->
                                    <td class="px-3 sm:px-4 py-3 hidden lg:table-cell">
                                        <div class="space-y-1 text-xs">
                                            <div class="flex justify-between gap-2">
                                                <span class="text-gray-500">Main Before:</span>
                                                <span class="font-semibold">Rs @refund.customer_main_balance_before_refund</span>
                                            </div>
                                            <div class="flex justify-between gap-2">
                                                <span class="text-gray-500">Main After:</span>
                                                <span class="font-semibold">Rs @refund.customer_main_balance_after_refund</span>
                                            </div>
                                            @if (refund.customer_bonus_balance_before_refund > 0 || refund.customer_bonus_balance_after_refund > 0)
                                            {
                                                <div class="flex justify-between gap-2">
                                                    <span class="text-gray-500">Bonus Before:</span>
                                                    <span class="font-semibold text-amber-600">Rs @refund.customer_bonus_balance_before_refund</span>
                                                </div>
                                                <div class="flex justify-between gap-2">
                                                    <span class="text-gray-500">Bonus After:</span>
                                                    <span class="font-semibold text-amber-600">Rs @refund.customer_bonus_balance_after_refund</span>
                                                </div>
                                            }
                                        </div>
                                    </td>

                                    <!-- Refund Info -->
                                    <td class="px-3 sm:px-4 py-3">
                                        <div class="space-y-2">
                                            <div class="text-xs font-semibold text-gray-900">
                                                @refund.refund_at?.ToString("MMM dd, yyyy hh:mm tt")
                                            </div>
                                            <div class="flex flex-wrap gap-1">
                                                @if (isLargeRefund)
                                                {
                                                    <span class="inline-flex items-center px-2 py-1 text-xs font-bold bg-red-100 text-red-800 rounded-full">
                                                        <span class="material-symbols-outlined text-xs mr-1">warning</span>
                                                        Large Refund
                                                    </span>
                                                }
                                                @if (isRecent)
                                                {
                                                    <span class="inline-flex items-center px-2 py-1 text-xs font-bold bg-orange-100 text-orange-800 rounded-full">
                                                        <span class="material-symbols-outlined text-xs mr-1">schedule</span>
                                                        Recent
                                                    </span>
                                                }
                                                <span class="inline-flex items-center px-2 py-1 text-xs font-bold bg-gray-100 text-gray-800 rounded-full">
                                                    <span class="material-symbols-outlined text-xs mr-1">person</span>
                                                    By: @refund.refund_by
                                                </span>
                                            </div>
                                            <div class="text-xs text-gray-500">
                                                Card: @refund.card_type
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>

                        <!-- Footer with Totals -->
                        <tfoot class="bg-gradient-to-r from-gray-50 to-red-50/30 border-t-2 border-gray-200/60">
                            <tr>
                                <td class="px-3 sm:px-4 py-3 text-sm font-bold text-gray-900">
                                    <div class="flex items-center gap-2">
                                        <span class="material-symbols-outlined text-red-600 text-sm">summarize</span>
                                        Total (@refunds.Count() refunds)
                                    </div>
                                </td>
                                <td class="px-3 sm:px-4 py-3 text-sm text-gray-500 hidden md:table-cell">
                                    -
                                </td>
                                <td class="px-3 sm:px-4 py-3 text-lg font-bold text-red-600">
                                    Rs @($"{refunds.Sum(x => x.amount):N0}")
                                </td>
                                <td class="px-3 sm:px-4 py-3 text-sm text-gray-500 hidden lg:table-cell">
                                    -
                                </td>
                                <td class="px-3 sm:px-4 py-3 text-sm text-gray-500">
                                    @refunds.Select(x => x.customer_id).Distinct().Count() customers affected
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- Legend -->
                <div class="px-4 sm:px-6 py-3 bg-gradient-to-r from-gray-50 to-gray-100/50 border-t border-gray-200/60">
                    <div class="flex flex-wrap gap-3 items-center text-xs">
                        <div class="font-semibold text-gray-700 flex items-center gap-1">
                            <span class="material-symbols-outlined text-sm">legend_toggle</span>
                            Refund Types:
                        </div>
                        <div class="flex items-center gap-1">
                            <div class="w-3 h-3 bg-red-100 border border-red-300 rounded"></div>
                            <span class="text-red-700">Large Refunds (>Rs 1,000)</span>
                        </div>
                        <div class="flex items-center gap-1">
                            <div class="w-3 h-3 bg-orange-100 border border-orange-300 rounded"></div>
                            <span class="text-orange-700">Recent (Last 24h)</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private IEnumerable<EsBilling> refunds = new List<EsBilling>();
    private bool isLoading = false;
    private string selectedRange = "today";
    private DateTime startDate = DateTime.Today;
    private DateTime endDate = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        await LoadRefundData();
    }

    private async Task LoadRefundData()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Use dedicated refund repository method
            refunds = await BillingRepository.GetRefundsByDateRangeAsync(startDate, endDate);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading refund data: {ex.Message}");
            refunds = new List<EsBilling>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SetDateRange(string range)
    {
        selectedRange = range;

        switch (range)
        {
            case "today":
                startDate = DateTime.Today;
                endDate = DateTime.Today;
                break;
            case "yesterday":
                startDate = DateTime.Today.AddDays(-1);
                endDate = DateTime.Today.AddDays(-1);
                break;
            case "thisMonth":
                startDate = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
                endDate = DateTime.Today;
                break;
            case "lastMonth":
                var lastMonth = DateTime.Today.AddMonths(-1);
                startDate = new DateTime(lastMonth.Year, lastMonth.Month, 1);
                endDate = new DateTime(lastMonth.Year, lastMonth.Month, DateTime.DaysInMonth(lastMonth.Year, lastMonth.Month));
                break;
            case "custom":
                // Keep current dates for custom selection
                break;
        }

        if (range != "custom")
        {
            _ = LoadRefundData();
        }
    }

    private string GetDateRangeDisplay()
    {
        return selectedRange switch
        {
            "today" => "Today",
            "yesterday" => "Yesterday",
            "thisMonth" => "This Month",
            "lastMonth" => "Last Month",
            "custom" => $"{startDate:MMM dd, yyyy} to {endDate:MMM dd, yyyy}",
            _ => "Unknown Range"
        };
    }

    private async Task ExportToExcel()
    {
        Console.WriteLine("Exporting refund data to Excel...");
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/reports");
    }
}