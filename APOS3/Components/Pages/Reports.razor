@page "/reports"
@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager

<div class="mb-8">
    <!-- Search Bar -->
    <div class="mb-8">
        <label class="flex flex-col min-w-40 h-12 w-full max-w-2xl">
            <div class="flex w-full flex-1 items-stretch rounded-lg h-full">
                <div class="text-neutral-500 flex border border-neutral-300 bg-white items-center justify-center pl-4 rounded-l-lg border-r-0">
                    <span class="material-symbols-outlined">search</span>
                </div>
                <input class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-r-lg text-neutral-800 focus:outline-0 focus:ring-1 focus:ring-primary focus:border-primary border-neutral-300 border bg-white h-full placeholder:text-neutral-500 px-4 text-base font-normal leading-normal"
                       placeholder="Search reports..." value="" />
            </div>
        </label>
    </div>
</div>

<!-- Reports Grid - 4 columns -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Sales Report -->
    <div class="group cursor-pointer transform transition-all duration-300 hover:scale-105 hover:shadow-2xl" @onclick='() => NavigateToReport("sales")'>
        <div class="bg-gradient-to-br from-blue-500 via-blue-600 to-purple-700 rounded-2xl p-6 text-white shadow-xl h-64 flex flex-col justify-between relative overflow-hidden">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-2 right-2 text-4xl">&#128202;</div>
                <div class="absolute bottom-2 left-2 text-2xl">&#128176;</div>
            </div>

            <div class="relative z-10 flex flex-col items-center justify-center h-full">
                <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm mb-4">
                    <span class="material-symbols-outlined text-3xl">trending_up</span>
                </div>
                <h2 class="text-2xl font-bold text-center mb-2">Sales</h2>
                <p class="text-blue-200 text-sm text-center">1,247 Records</p>
            </div>

            <!-- Hover Arrow -->
            <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span class="material-symbols-outlined text-lg bg-white/20 p-1 rounded-full">arrow_forward</span>
            </div>
        </div>
    </div>

    <!-- Customer Report -->
    <div class="group cursor-pointer transform transition-all duration-300 hover:scale-105 hover:shadow-2xl" @onclick='() => NavigateToReport("customer")'>
        <div class="bg-gradient-to-br from-green-500 via-emerald-600 to-teal-700 rounded-2xl p-6 text-white shadow-xl h-64 flex flex-col justify-between relative overflow-hidden">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-2 right-2 text-4xl">&#128101;</div>
                <div class="absolute bottom-2 left-2 text-2xl">&#11088;</div>
            </div>

            <div class="relative z-10 flex flex-col items-center justify-center h-full">
                <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm mb-4">
                    <span class="material-symbols-outlined text-3xl">group</span>
                </div>
                <h2 class="text-2xl font-bold text-center mb-2">Customer</h2>
                <p class="text-green-200 text-sm text-center">892 Customers</p>
            </div>

            <!-- Hover Arrow -->
            <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span class="material-symbols-outlined text-lg bg-white/20 p-1 rounded-full">arrow_forward</span>
            </div>
        </div>
    </div>

    <!-- Game Report -->
    <div class="group cursor-pointer transform transition-all duration-300 hover:scale-105 hover:shadow-2xl" @onclick='() => NavigateToReport("games")'>
        <div class="bg-gradient-to-br from-purple-500 via-violet-600 to-fuchsia-700 rounded-2xl p-6 text-white shadow-xl h-64 flex flex-col justify-between relative overflow-hidden">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-2 right-2 text-4xl">&#127918;</div>
                <div class="absolute bottom-2 left-2 text-2xl">&#127942;</div>
            </div>

            <div class="relative z-10 flex flex-col items-center justify-center h-full">
                <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm mb-4">
                    <span class="material-symbols-outlined text-3xl">sports_esports</span>
                </div>
                <h2 class="text-2xl font-bold text-center mb-2">Game</h2>
                <p class="text-purple-200 text-sm text-center">48 Games</p>
            </div>

            <!-- Hover Arrow -->
            <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span class="material-symbols-outlined text-lg bg-white/20 p-1 rounded-full">arrow_forward</span>
            </div>
        </div>
    </div>

    <!-- Refund Report -->
    <div class="group cursor-pointer transform transition-all duration-300 hover:scale-105 hover:shadow-2xl" @onclick='() => NavigateToReport("refund")'>
        <div class="bg-gradient-to-br from-orange-500 via-red-600 to-rose-700 rounded-2xl p-6 text-white shadow-xl h-64 flex flex-col justify-between relative overflow-hidden">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-2 right-2 text-4xl">&#128260;</div>
                <div class="absolute bottom-2 left-2 text-2xl">&#128221;</div>
            </div>

            <div class="relative z-10 flex flex-col items-center justify-center h-full">
                <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm mb-4">
                    <span class="material-symbols-outlined text-3xl">assignment_return</span>
                </div>
                <h2 class="text-2xl font-bold text-center mb-2">Refund</h2>
                <p class="text-orange-200 text-sm text-center">12 This Month</p>
            </div>

            <!-- Hover Arrow -->
            <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span class="material-symbols-outlined text-lg bg-white/20 p-1 rounded-full">arrow_forward</span>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats Footer -->
<div class="mt-12 bg-gradient-to-r from-gray-50 to-neutral-100 rounded-2xl p-6 border border-neutral-200">
    <h3 class="text-xl font-bold text-neutral-800 mb-6">Report Statistics</h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
            <p class="text-2xl font-black text-blue-600">4</p>
            <p class="text-sm text-neutral-600">Report Types</p>
        </div>
        <div class="text-center">
            <p class="text-2xl font-black text-green-600">2,187</p>
            <p class="text-sm text-neutral-600">Total Records</p>
        </div>
        <div class="text-center">
            <p class="text-2xl font-black text-purple-600">98%</p>
            <p class="text-sm text-neutral-600">Data Accuracy</p>
        </div>
        <div class="text-center">
            <p class="text-2xl font-black text-orange-600">15s</p>
            <p class="text-sm text-neutral-600">Avg. Generation</p>
        </div>
    </div>
</div>

@code {
    private void NavigateToReport(string reportType)
    {
        NavigationManager.NavigateTo($"/reports/{reportType}");
    }
}